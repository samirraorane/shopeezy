<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shoplocal"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.shoplocal.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shoplocal.FindStoreActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_find_store"
            android:parentActivityName="com.shoplocal.FullscreenActivity"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.shoplocal.StoreListingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_store_listings"
            android:parentActivityName="com.shoplocal.FindStoreActivity"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.shoplocal.SearchListingsActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_search_product"
            android:parentActivityName="com.shoplocal.FullscreenActivity"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.shoplocal.SearchActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_search"
            android:theme="@style/FullscreenTheme" >
        </activity>
    </application>

</manifest>
